{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors":true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es7", "dom"],
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    }
  },
  "include": [ "src/**/*" ],
  "exclude": [
    "node_modules"
  ]
}
